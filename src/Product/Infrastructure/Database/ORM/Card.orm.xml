<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Cards\Domain\Entity\Card" table="cards_card" schema="public">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="card_seq" initial-value="1" />
        </id>

        <field name="name" column="name" type="text" nullable="false" unique="true" />
        <field name="image" column="image" type="text" nullable="true" />
        <field name="cost" column="cost" type="integer" nullable="false" />
        <field name="eliteness" column="eliteness" type="text" nullable="false" />
        <field name="number" column="number" type="integer" nullable="false" />
        <field name="rarity" column="rarity" type="text" nullable="false" />
        <field name="element" column="element" type="text" nullable="false" />
        <field name="type" column="type" type="text" nullable="false" />
        <field name="health" column="health" type="integer" nullable="true" />
        <field name="movement" column="movement" type="integer" nullable="true" />
        <field name="fly" column="fly" type="boolean" nullable="false" />
        <field name="powerWeak" column="powerWeak" type="integer" nullable="true" />
        <field name="powerMedium" column="powerMedium" type="integer" nullable="true" />
        <field name="powerStrong" column="powerStrong" type="integer" nullable="true" />
        <field name="text" column="text" type="text" nullable="true" />
        <field name="flavor" column="flavor" type="text" nullable="true" />
        <field name="errata" column="errata" type="text" nullable="true" />

        <many-to-one field="edition" target-entity="App\Cards\Domain\Entity\Edition" fetch="EAGER">
            <join-column name="edition_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-many field="artists" target-entity="App\Cards\Domain\Entity\Artist" fetch="EAGER">
            <join-table name="cards_cards_artists">
                <join-columns>
                    <join-column name="card_id" referenced-column-name="id" nullable="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="artist_id" referenced-column-name="id" nullable="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="questions" target-entity="App\Cards\Domain\Entity\Question" mapped-by="cards">
            <cascade>
                <cascade-persist />
                <cascade-merge />
                <cascade-refresh />
                <cascade-detach />
            </cascade>
        </many-to-many>

    </entity>
</doctrine-mapping>